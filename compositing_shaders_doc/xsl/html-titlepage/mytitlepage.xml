<t:templates xmlns:t="http://nwalsh.com/docbook/xsl/template/1.0"
	     xmlns:param="http://nwalsh.com/docbook/xsl/template/1.0/param"
             xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<!-- A simple customization of the book title page for HTML.
     This follows the guide on
     http://www.sagehill.net/docbookxsl/HTMLTitlePage.html
     The original of this XML is on
     /usr/share/xml/docbook/stylesheet/nwalsh/html/titlepage.templates.xml
     We only customize the titlepage for the "book" element. -->

<t:titlepage t:element="book" t:wrapper="div" class="book-titlepage">
  <t:titlepage-before t:side="recto">
  </t:titlepage-before>

  <t:titlepage-content t:side="recto">
    <title/>
    <subtitle/>
    <corpauthor/>
    <authorgroup/>
    <author/>
    <othercredit/>
    <releaseinfo/>
  </t:titlepage-content>

  <t:titlepage-before t:side="verso">
    <img src="images/cellular_texturing_title.png" alt="Cellular texturing using our procedural texture" />
    <p>Ph.D. Thesis</p>
    <p>Institute of Computer Science<br/>
    University of Wrocław</p>
    <p>Wrocław, 2011</p>
    <hr/>
  </t:titlepage-before>

  <t:titlepage-content t:side="verso">
    <copyright/>
    <legalnotice/>
    <pubdate/>
    <revision/>
    <revhistory/>
  </t:titlepage-content>

  <t:titlepage-separator>
  </t:titlepage-separator>
</t:titlepage>

</t:templates>
